{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "baseUrl": ".",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "./dist"
    },
    "include": ["src/**/*", "libs.d.ts"],
    "exclude": ["node_modules", "dist"]
}